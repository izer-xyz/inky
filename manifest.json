{
   "manifest_version": 3,
   "name": "Inky - Makeup & Move",
   "version": "0.0.1",
   "description": "Whitewash page and add navigations on the sides to avoid scrolling. #eink",

   "icons": {
      "128": "icon-128.png"
   },

   "options_ui": { 
      "page": "options.html",
      "open_in_tab": true
   },

   "content_scripts": [{
         "matches": [ "<all_urls>" ],
         "js":      [ "content.js" ]
   }],

   "permissions": [
      "storage"
   ],

   "web_accessible_resources": [
      {
         "resources": [ "whitewash.css" ],
         "matches":   [ "<all_urls>" ]
      }
  ]

}
